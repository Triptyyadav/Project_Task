
@model IEnumerable<Productmanagement.Models.CategoryModel>


@{
    ViewBag.Title = "Index";
}

<h3>Category Master</h3>


<p>
    @Html.ActionLink("Add New Category", "AddCategory")
</p>

<table class="table">
    <tr>

        <th>
           Categoty Id
        </th>
        <th>
            Category Name
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
       
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            

            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "EditCategoryDetails", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryId }, new { onclick = "return confirm('Are sure wants to delete?');" })
            </td>
        </tr>

    }

</table>

